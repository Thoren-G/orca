@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix hobbit: <http://w3id.org/hobbit/vocab#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix : <https://github.com/dice-group/ldcbench#> .

:benchmark a hobbit:Benchmark;
  rdfs:label "LDC-Bench"@en;
  rdfs:comment "Linked Data Crawler Benchmark"@en;
  hobbit:imageName "git.project-hobbit.eu:4567/ldcbench/ldcbench/benchmark-controller";
  hobbit:version "v1.0"@en;
  hobbit:hasParameter :seed, :numberOfNodes, :triplesPerNode, :averageNodeGraphDegree, :averageRdfGraphDegree, :averageNodeDelay;
  hobbit:hasAPI :Api .

:api a hobbit:API .

:seed a hobbit:Parameter, hobbit:ConfigurableParameter;
  rdfs:label "Seed"@en;
  rdfs:comment "The seed of the random number generators used by this bechmark."@en;
  rdfs:domain hobbit:Experiment, hobbit:Challenge;
  rdfs:range xsd:integer;
  hobbit:defaultValue "0"^^xsd:integer .

:numberOfNodes a hobbit:Parameter, hobbit:ConfigurableParameter;
  rdfs:label "Number of nodes"@en;
  rdfs:comment "Number of cloud nodes generated by this benchmark."@en;
  rdfs:domain hobbit:Experiment, hobbit:Challenge;
  rdfs:range xsd:integer;
  hobbit:defaultValue "10"^^xsd:integer .

:triplesPerNode a hobbit:Parameter, hobbit:ConfigurableParameter;
  rdfs:label "Triples per node"@en;
  rdfs:comment ""@en;
  rdfs:domain hobbit:Experiment, hobbit:Challenge;
  rdfs:range xsd:integer;
  hobbit:defaultValue "100"^^xsd:integer .

:averageNodeGraphDegree a hobbit:Parameter, hobbit:ConfigurableParameter;
  rdfs:label "Average node graph degree"@en;
  rdfs:comment "Average degree of a node in the node graph."@en;
  rdfs:domain hobbit:Experiment, hobbit:Challenge;
  rdfs:range xsd:integer;
  hobbit:defaultValue "3"^^xsd:integer .

:averageRdfGraphDegree a hobbit:Parameter, hobbit:ConfigurableParameter;
  rdfs:label "Average rdf graph degree"@en;
  rdfs:comment "Average degree of a node in the rdf graph."@en;
  rdfs:domain hobbit:Experiment, hobbit:Challenge;
  rdfs:range xsd:integer;
  hobbit:defaultValue "5"^^xsd:integer .

:averageNodeDelay a hobbit:Parameter, hobbit:ConfigurableParameter;
  rdfs:label "Average node delay"@en;
  rdfs:comment "Average delay of node reponses."@en;
  rdfs:domain hobbit:Experiment, hobbit:Challenge;
  rdfs:range xsd:integer;
  hobbit:defaultValue "PT5S"^^xsd:string .
